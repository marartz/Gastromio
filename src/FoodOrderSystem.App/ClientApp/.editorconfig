# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_size = tab

[*.html]
indent_size = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.ts]
indent_size = 2
quote_type = single

[*.txt]
indent_size = tab

[*.xml]
indent_size = tab